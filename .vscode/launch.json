    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "cdpctl validate infra",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "validate",
                "infra",
                "--config_file",
                "config.yaml"
            ]
        },
        {
            "name": "cdpctl provision infra",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "provision",
                "infra",
                "--config_file",
                "config.yaml"
            ]
        },
        {
            "name": "cdpctl config skeleton",
            "type": "python",
            "request": "launch",
            "module": "cdpctl",
            "args": [
                "config",
                "skeleton"
            ]
        }
    ]
}
